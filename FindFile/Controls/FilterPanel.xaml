<UserControl x:Class="ZoDream.FindFile.Controls.FilterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZoDream.FindFile.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <local:HeaderPanel Header="筛选方式">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <CheckBox Name="EmptyTb" Margin="0,2,0,5" IsChecked="True" ToolTip="不查找大小为0的文件">忽略空文件</CheckBox>
                    <CheckBox Name="HiddenTb" Margin="0,0,0,5">忽略隐藏文件</CheckBox>
                    <CheckBox Name="SmallTb" Margin="0,0,0,5">忽略小文件（小于1024KB）</CheckBox>
                    <CheckBox Name="ImageTb" Margin="0,0,0,5">包含图片</CheckBox>
                    <CheckBox Name="MediaTb" Margin="0,0,0,5">包含视频</CheckBox>
                    <CheckBox Name="ZipTb" Margin="0,0,0,5">包含压缩文件</CheckBox>
                    <CheckBox Name="DocumentTb" >包含文档</CheckBox>
                </StackPanel>
            </ScrollViewer>
        </local:HeaderPanel> 
    </Grid>
</UserControl>
