<UserControl x:Class="ZoDream.FindFile.Controls.ComparePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZoDream.FindFile.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox Header="匹配方式">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <CheckBox Name="NameTb"  Margin="0,2,0,5">文件名</CheckBox>
                    <CheckBox Name="SizeTb"  Margin="0,0,0,5">文件大小</CheckBox>
                    <CheckBox Name="MtimeTb"  Margin="0,0,0,5">文件修改时间</CheckBox>
                    <CheckBox Name="Md5Tb" Margin="0,0,0,5" IsChecked="True">文件MD5</CheckBox>
                    <CheckBox Name="CrcTb">文件CRC32</CheckBox>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
